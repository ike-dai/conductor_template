<?xml version="1.0" encoding="UTF-8" ?>
<cc:System xmlns:cc="http://cloudconductor.org/namespaces/cc">
  <cc:Name>3セグメント3層モデル</cc:Name>
  <cc:Description>WEB/AP/DB 3層モデル</cc:Description>
  <cc:Author>TIS Inc.</cc:Author>
  <cc:Date>2014-03-20</cc:Date>
  <cc:License />
  <cc:Infrastructures>
    <cc:Infrastructure id="cloud1">
      <cc:Name>private cloud A</cc:Name>
    </cc:Infrastructure>
  </cc:Infrastructures>
  <cc:Machines>
    <cc:Machine id="machine_1">
      <cc:Name>Small Server</cc:Name>
      <cc:SpecType>small</cc:SpecType>
      <cc:OSType>CentOS</cc:OSType>
      <cc:OSVersion>6.5</cc:OSVersion>
      <cc:NetworkInterfaces>
        <cc:NetworkInterface ref="dmz_g1" />
      </cc:NetworkInterfaces>
      <cc:MachineFilters>
        <cc:MachineFilter ref="sec_in_80" />
        <cc:MachineFilter ref="sec_in_all_deny" />
        <cc:MachineFilter ref="sec_out_all_allow" />
        <cc:MachineFilter ref="sec_in_443" />
        <cc:MachineFilter ref="sec_in_10050" />
      </cc:MachineFilters>
    </cc:Machine>
    <cc:Machine id="small-server-zabbix">
      <cc:Name>Small Server</cc:Name>
      <cc:SpecType>small</cc:SpecType>
      <cc:OSType>CentOS</cc:OSType>
      <cc:OSVersion>6.5</cc:OSVersion>
      <cc:NetworkInterfaces>
        <cc:NetworkInterface ref="private_net_g1" />
      </cc:NetworkInterfaces>
      <cc:MachineFilters>
        <cc:MachineFilter ref="sec_in_80" />
        <cc:MachineFilter ref="sec_in_443" />
        <cc:MachineFilter ref="sec_in_tcp_53" />
      </cc:MachineFilters>
    </cc:Machine>
  </cc:Machines>
  <cc:MachineGroups>
    <cc:MachineGroup id="web-server-g" ref="machine_1">
      <cc:Name>WEB Server Group</cc:Name>
      <cc:Infrastructures>
        <cc:Infrastructure ref="cloud1" />
      </cc:Infrastructures>
      <cc:Roles>
        <cc:Role ref="web_role" />
      </cc:Roles>
      <cc:FloatingIP ref="eip1" />
      <cc:NodeType>
        <cc:Single />
      </cc:NodeType>
    </cc:MachineGroup>
    <cc:MachineGroup id="zabbix-server-g" ref="small-server-zabbix">
      <cc:Name>Zabbix Server</cc:Name>
      <cc:Infrastructures>
        <cc:Infrastructure ref="cloud1" />
      </cc:Infrastructures>
      <cc:Roles>
        <cc:Role ref="zabbix_dns_role" />
      </cc:Roles>
      <cc:FloatingIP ref="eip2" />
      <cc:NodeType>
        <cc:Single />
      </cc:NodeType>
    </cc:MachineGroup>
  </cc:MachineGroups>
  <cc:Middlewares>
    <cc:Middleware type="chef" id="apache_cookbook">
      <cc:Name>Apache2</cc:Name>
      <cc:Repository>https://github.com/opscode-cookbooks/apache2.git</cc:Repository>
    </cc:Middleware>
    <cc:Middleware type="chef" id="zabbix_cookbook">
      <cc:Name>Zabbix</cc:Name>
      <cc:Repository>https://github.com/cloudconductor-dev/cookbooks.git</cc:Repository>
      <cc:CookbookName>cc-zabbix</cc:CookbookName>
    </cc:Middleware>
    <cc:Middleware type="chef" id="bind_cookbook">
      <cc:Name>Bind 9</cc:Name>
      <cc:Repository>https://github.com/cloudconductor-dev/cookbooks.git</cc:Repository>
      <cc:CookbookName>cc-bind</cc:CookbookName>
    </cc:Middleware>
    <cc:Middleware type="chef" id="deploy_cookbook">
      <cc:Name>Deploy</cc:Name>
      <cc:Repository>https://github.com/cloudconductor-dev/cookbooks.git</cc:Repository>
      <cc:CookbookName>cc-deploy</cc:CookbookName>
    </cc:Middleware>
    <cc:Middleware type="chef" id="nsupdate_cookbook">
      <cc:Name>NSUpdate</cc:Name>
      <cc:Repository>https://github.com/cloudconductor-dev/cookbooks.git</cc:Repository>
      <cc:CookbookName>cc-nsupdate</cc:CookbookName>
    </cc:Middleware>
  </cc:Middlewares>
  <cc:Roles>
    <cc:Role type="chef" id="web_role">
      <cc:Name>Web Server Role</cc:Name>
      <cc:Middlewares>
        <cc:Middleware ref="apache_cookbook" />
        <cc:Middleware ref="zabbix_cookbook" />
        <cc:Middleware ref="deploy_cookbook" />
        <cc:Middleware ref="nsupdate_cookbook" />
      </cc:Middlewares>
      <cc:Import type="chef_runlist">https://raw.github.com/cloudconductor-dev/chef-parameters/master/chef_runlist_apache.json</cc:Import>
      <cc:Import type="chef_attribute">https://raw.github.com/cloudconductor-dev/chef-parameters/master/chef_attr_apache.json</cc:Import>
      <cc:UserInputKeys>
        <cc:UserInputKey>apache.contact</cc:UserInputKey>
      </cc:UserInputKeys>
    </cc:Role>
    <cc:Role type="chef" id="zabbix_dns_role">
      <cc:Name>Monitoring Server Role</cc:Name>
      <cc:Middlewares>
        <cc:Middleware ref="zabbix_cookbook" />
        <cc:Middleware ref="bind_cookbook" />
        <cc:Middleware ref="deploy_cookbook" />
        <cc:Middleware ref="nsupdate_cookbook" />
      </cc:Middlewares>
      <cc:Import type="chef_runlist">https://raw.github.com/cloudconductor-dev/chef-parameters/master/chef_runlist_zabbix.json</cc:Import>
      <cc:Import type="chef_attribute">https://raw.github.com/cloudconductor-dev/chef-parameters/master/chef_attr_zabbix.json</cc:Import>
    </cc:Role>
  </cc:Roles>
  <cc:MachineFilters>
    <cc:MachineFilter id="sec_in_80">
      <cc:Protocol>tcp</cc:Protocol>
      <cc:Port>80</cc:Port>
      <cc:Direction>ingress</cc:Direction>
      <cc:Source>all</cc:Source>
      <cc:RuleAction>allow</cc:RuleAction>
    </cc:MachineFilter>
    <cc:MachineFilter id="sec_in_all_deny">
      <cc:Protocol>tcp</cc:Protocol>
      <cc:Port>all</cc:Port>
      <cc:Direction>ingress</cc:Direction>
      <cc:Source>all</cc:Source>
      <cc:RuleAction>deny</cc:RuleAction>
    </cc:MachineFilter>
    <cc:MachineFilter id="sec_out_all_allow">
      <cc:Protocol>tcp</cc:Protocol>
      <cc:Port>all</cc:Port>
      <cc:Direction>egress</cc:Direction>
      <cc:Destination>all</cc:Destination>
      <cc:RuleAction>allow</cc:RuleAction>
    </cc:MachineFilter>
    <cc:MachineFilter id="sec_in_443">
      <cc:Protocol>tcp</cc:Protocol>
      <cc:Port>443</cc:Port>
      <cc:Direction>ingress</cc:Direction>
      <cc:Source>all</cc:Source>
      <cc:RuleAction>allow</cc:RuleAction>
    </cc:MachineFilter>
    <cc:MachineFilter id="sec_in_10050">
      <cc:Protocol>tcp</cc:Protocol>
      <cc:Port>10050</cc:Port>
      <cc:Direction>ingress</cc:Direction>
      <cc:Source ref="private_net_g1" />
      <cc:RuleAction>allow</cc:RuleAction>
    </cc:MachineFilter>
    <cc:MachineFilter id="sec_in_tcp_53">
      <cc:Protocol>tcp</cc:Protocol>
      <cc:Port>53</cc:Port>
      <cc:Direction>ingress</cc:Direction>
      <cc:Source ref="dmz_g1" />
      <cc:RuleAction>allow</cc:RuleAction>
    </cc:MachineFilter>
  </cc:MachineFilters>
  <cc:Networks>
    <cc:Network id="public_net1">
      <cc:Name>public network 1</cc:Name>
    </cc:Network>
    <cc:Network id="dmz1">
      <cc:Name>dmz 1</cc:Name>
    </cc:Network>
    <cc:Network id="private_net1">
      <cc:Name>private network 1</cc:Name>
    </cc:Network>
  </cc:Networks>
  <cc:NetworkGroups>
    <cc:NetworkGroup id="public_net_g1">
      <cc:Name>public network group 1</cc:Name>
      <cc:Networks>
        <cc:Network ref="public_net1">
          <cc:Infrastructures>
            <cc:Infrastructure ref="cloud1" />
          </cc:Infrastructures>
        </cc:Network>
      </cc:Networks>
      <cc:NetworkFilters>
        <cc:NetworkFilter ref="acl_in_80_to_pub" />
        <cc:NetworkFilter ref="acl_in_all_deny" />
        <cc:NetworkFilter ref="acl_out_all_allow" />
      </cc:NetworkFilters>
      <cc:Routes>
        <cc:Route ref="route_all" />
        <cc:Route ref="route_dmz_g1" />
        <cc:Route ref="route_private_net_g1" />
      </cc:Routes>
      <cc:NATs>
        <cc:NAT ref="nat_web" />
      </cc:NATs>
    </cc:NetworkGroup>
    <cc:NetworkGroup id="dmz_g1">
      <cc:Name>dmz group 1</cc:Name>
      <cc:Networks>
        <cc:Network ref="dmz1">
          <cc:Infrastructures>
            <cc:Infrastructure ref="cloud1" />
          </cc:Infrastructures>
        </cc:Network>
      </cc:Networks>
      <cc:NetworkFilters>
        <cc:NetworkFilter ref="acl_in_80_pub_to_dmz" />
        <cc:NetworkFilter ref="acl_in_all_deny" />
        <cc:NetworkFilter ref="acl_out_all_allow" />
      </cc:NetworkFilters>
      <cc:Routes>
        <cc:Route ref="route_all" />
        <cc:Route ref="route_private_net_g1" />
      </cc:Routes>
    </cc:NetworkGroup>
    <cc:NetworkGroup id="private_net_g1">
      <cc:Name>private network group 1</cc:Name>
      <cc:Networks>
        <cc:Network ref="private_net1">
          <cc:Infrastructures>
            <cc:Infrastructure ref="cloud1" />
          </cc:Infrastructures>
        </cc:Network>
      </cc:Networks>
      <cc:NetworkFilters>
        <cc:NetworkFilter ref="acl_in_80_dmz_to_pri" />
        <cc:NetworkFilter ref="acl_in_all_deny" />
        <cc:NetworkFilter ref="acl_out_all_allow" />
      </cc:NetworkFilters>
      <cc:Routes>
        <cc:Route ref="route_all" />
        <cc:Route ref="route_dmz_g1" />
      </cc:Routes>
    </cc:NetworkGroup>
  </cc:NetworkGroups>
  <cc:Routes>
    <cc:Route id="route_all">
      <cc:Destination>all</cc:Destination>
      <cc:Target>{{InternetGateway}}</cc:Target>
    </cc:Route>
    <cc:Route id="route_dmz_g1">
      <cc:Destination ref="dmz_g1" />
      <cc:Target ref="dmz_g1" />
    </cc:Route>
    <cc:Route id="route_private_net_g1">
      <cc:Destination ref="private_net_g1" />
      <cc:Target ref="private_net_g1" />
    </cc:Route>
  </cc:Routes>
  <cc:NetworkFilters>
    <cc:NetworkFilter id="acl_in_80_to_pub">
      <cc:Protocol>tcp</cc:Protocol>
      <cc:Port>80</cc:Port>
      <cc:Direction>ingress</cc:Direction>
      <cc:Source>all</cc:Source>
      <cc:RuleAction>allow</cc:RuleAction>
    </cc:NetworkFilter>
    <cc:NetworkFilter id="acl_in_all_deny">
      <cc:Protocol>tcp</cc:Protocol>
      <cc:Port>all</cc:Port>
      <cc:Direction>ingress</cc:Direction>
      <cc:Source>all</cc:Source>
      <cc:RuleAction>deny</cc:RuleAction>
    </cc:NetworkFilter>
    <cc:NetworkFilter id="acl_out_all_allow">
      <cc:Protocol>tcp</cc:Protocol>
      <cc:Port>all</cc:Port>
      <cc:Direction>egress</cc:Direction>
      <cc:Destination>all</cc:Destination>
      <cc:RuleAction>allow</cc:RuleAction>
    </cc:NetworkFilter>
    <cc:NetworkFilter id="acl_in_80_pub_to_dmz">
      <cc:Protocol>tcp</cc:Protocol>
      <cc:Port>80</cc:Port>
      <cc:Direction>ingress</cc:Direction>
      <cc:Source ref="public_net_g1" />
      <cc:RuleAction>allow</cc:RuleAction>
    </cc:NetworkFilter>
    <cc:NetworkFilter id="acl_in_80_dmz_to_pri">
      <cc:Protocol>tcp</cc:Protocol>
      <cc:Port>80</cc:Port>
      <cc:Direction>ingress</cc:Direction>
      <cc:Source ref="dmz_g1" />
      <cc:RuleAction>allow</cc:RuleAction>
    </cc:NetworkFilter>
  </cc:NetworkFilters>
  <cc:NATs>
    <cc:NAT id="nat_web">
      <cc:Source>{{InternetGateway}}</cc:Source>
      <cc:Destination ref="web-server-g" />
    </cc:NAT>
  </cc:NATs>
  <cc:FloatingIPs>
    <cc:FloatingIP id="eip1">
      <cc:Name>eip1</cc:Name>
    </cc:FloatingIP>
    <cc:FloatingIP id="eip2">
      <cc:Name>eip2</cc:Name>
    </cc:FloatingIP>
  </cc:FloatingIPs>
</cc:System>
